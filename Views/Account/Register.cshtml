@model Expense_Tracker.Models.RegisterViewModel
@{
    ViewData["PageTitle"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color: #212b36;">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="email" placeholder="Email" floatLabelType="Auto" ejs-for="@Model.Email"></ejs-textbox>
                    <span asp-validation-for="Email" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="password" placeholder="Password" floatLabelType="Auto" ejs-for="@Model.Password"></ejs-textbox>
                    <span asp-validation-for="Password" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="ConfirmPassword" placeholder="Comfirm Passward" floatLabelType="Auto" ejs-for="@Model.ConfirmPassword"></ejs-textbox>
                    <span asp-validation-for="ConfirmPassword" class="text-danger fs-6"></span>
                </div>
                <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
</div>
